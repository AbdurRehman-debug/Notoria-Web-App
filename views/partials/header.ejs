<!DOCTYPE html>
<html lang="en" data-bs-theme="">
<head>
  <script>
     window.addEventListener("DOMContentLoaded", () => {
        const themeValue = localStorage.getItem("theme") || 'light';
        document.documentElement.setAttribute('data-bs-theme', themeValue);
      });
  </script>
   <link rel="icon" type="image/x-icon" href="/images/sticky-note.png">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <title>Notoria</title>
</head>
<body>
    <nav class="navbar bg-primary" >
        <div class="container-fluid justify-content-space-between">
          <a class="navbar-brand" href="/root">
            <img src="/images/sticky-note.png" alt="Logo" width="30" height="30" class="d-inline-block align-text-top">
            Notoria
          </a>
          <form id="myForm" action="" method="">
          <select class="form-select form-select-sm" aria-label="Small select example" style="width: 150px;" name="Theme"  onchange="submitForm()">
            <option disabled selected>Change Theme</option>
            <option  value="light">Light</option>
            <option  value="dark">Dark</option>
          </select>
        </form>
        </div>
      </nav>

      <script>
            

      function submitForm() {
        const themeValue = document.querySelector('.form-select').value;
        document.documentElement.setAttribute('data-bs-theme', themeValue || 'light');
        localStorage.setItem('theme', themeValue);
      }
            
  
      </script>

</body>
</html>